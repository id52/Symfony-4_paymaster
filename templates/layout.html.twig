<!DOCTYPE html>
<html lang="ru">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Счета</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>

{% if app.user %}
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('invoice_list') }}">Счета <i class="fa fa-sync"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    {% if app.user.hasRole('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_user_list') }}"><i class="fa fa-users"></i> Пользователи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('invoice_list') }}"><i class="fa fa-file"></i> Счета</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}"><i class="fa fa-user-circle"></i> ({{ app.user.username }}) Выйти</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}

<!-- Page Content -->
<div class="container-fluid">
    <div class="row"> </div>
    <div class="row"> </div>
    <div class="row"> </div>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong></strong>{{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <strong></strong>{{ message }}
        </div>
    {% endfor %}

    {% block content '' %}
</div>
</body>

<script src="//code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script defer src="//use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
<script defer src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js"></script>
<script defer src="/js/app.js"></script>

{% block js '' %}

</html>